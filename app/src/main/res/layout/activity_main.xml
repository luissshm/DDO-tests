<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/localIpText"
            android:text="Local IP"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/localDinText"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space android:layout_height="12dp" android:layout_width="match_parent"/>

        <EditText
            android:id="@+id/remoteIpEdit"
            android:hint="Remote IP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/remoteDinEdit"
            android:hint="Remote DIN"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/payloadEdit"
            android:hint="Payload value"
            android:inputType="numberSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space android:layout_height="16dp" android:layout_width="match_parent"/>

        <Button
            android:id="@+id/btnStart"
            android:text="Start Agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnMap"
            android:text="Map Remote Node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSend"
            android:text="Send Test DDO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDrivers"
            android:text="Show Drivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDiscovery"
            android:text="Start Discovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space android:layout_height="16dp" android:layout_width="match_parent"/>

        <TextView
            android:text="LOG"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/logView"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#111111"
            android:textColor="#00FF00"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>
</ScrollView>
